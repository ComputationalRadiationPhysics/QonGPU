#ifndef NUMVEROVKERNEL
#define NUMVEROVKERNEL

#include "Potential.h"

__global__ void Numerov(double* psi, size_t ne,size_t nx,double xm){
	int tid = nx*(threadIdx.x+blockIdx.x*blockDim.x);
	int offset = nx*blockDim.x*gridDim.x;
	double dx=xm/nx;
	double E;
	double f1,f2,f3;
	while(tid<nx*ne){
		E=tid/(nx*ne)*(-1);
		
		for(int i = 2; i < nx;i++){
			f1=1/((1+dx*dx/6)*(E-V(i*dx,0.0));
			f2=(1-5/6*dx*dx)*(E-V((i-1)*dx,0);
			
							  }
				  }
	
};


#endif